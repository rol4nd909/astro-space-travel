---
import Logo from '@/icons/logo.svg'

interface Props {
    title?: string
}

const { title } = Astro.props
---

<header class="lane">
    <div class="flex">
        <a href="/" class="logo">
            <Logo width={48} height={48} aria-hidden />
            <span class="sr-only">Back to homepage</span>
        </a>
        <h1 class="fs-450 uppercase letter-spacing-1">{title}</h1>
    </div>
</header>

<style lang="scss">
    header {
        padding-block-start: 4rem;
        padding-block-end: 6rem;

        &.lane {
            display: grid;
            grid-template-columns:
                minmax(var(--site-spacing), 1fr)
                minmax(0, var(--site-constrain))
                minmax(var(--site-spacing), 1fr);
            place-content: center;

            > * {
                grid-column: 2;
            }
        }
    }

    .flex {
        align-items: center;
        justify-content: space-between;
    }

    .fs-450 {
        font-size: 1.5rem;
    }

    .logo {
        display: grid;
    }
</style>
